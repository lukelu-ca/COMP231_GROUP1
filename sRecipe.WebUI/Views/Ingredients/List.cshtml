@model List<sRecipe.WebUI.Models.IngredientViewModel>
<h4>Ingredients</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Quantity)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(o => item.Name)
            </td>
            <td>
                @Html.DisplayFor(o => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(o => item.Quantity)
            </td>
        </tr>
    }

</table>

