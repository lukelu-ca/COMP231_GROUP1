@model sRecipe.WebUI.Models.DirectionListViewModel
<h4>Directions</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.RecipeId)

    <table class="table table-striped">
        <colgroup>
            <col class="col-sm-2" />
            <col class="col-sm-10" />
        </colgroup>
        <thead>
            <tr>
                <th>
                    Step
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Description)
                </th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Items.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(model => Model.Items[i].Id)


                        @Html.EditorFor(model => Model.Items[i].Order, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.Items[i].Order)
                  </td>
                    <td>
                        @Html.EditorFor(model => Model.Items[i].Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => Model.Items[i].Description)
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit"
               class="btn btn-sm btn-info"
               name="action:AddDirection"
               value="Add Direction" />

        <input type="submit"
               class="btn btn-primary btn-sm"
               name="action:SaveDirection"
               value="Save Direction" />
    </div>
}

