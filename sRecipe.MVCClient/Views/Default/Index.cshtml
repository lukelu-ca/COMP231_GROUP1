@model sRecipe.MVCClient.Models.RecipesListViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Calorie</th>
        <th>Cooking Time</th>
        <th>MealType</th>
        <th>Ratings</th>
        <th>Number of Services</th>
        <th>Submitted by</th>
        <th>Viewed</th>
    </tr>

    @foreach (var item in Model.Recipes)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Calorie)</td>
            <td>@Html.DisplayFor(modelItem => item.Cooking_Time)</td>
            <td>@Html.DisplayFor(modelItem => item.MealType.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Ratings)</td>
            <td>@Html.DisplayFor(modelItem => item.Number_of_Services)</td>
            <td>@Html.DisplayFor(modelItem => item.User.NickName)</td>
            <td>@Html.DisplayFor(modelItem => item.Viewed)</td>
       <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
